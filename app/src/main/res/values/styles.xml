<resources xmlns:android="http://schemas.android.com/apk/res/android">

    <!--~~~~~~~~~~~~~~~~~~~~ APP THEME ~~~~~~~~~~~~~~~~~~~~-->

    <!-- Base application theme -->
    <style name="Theme.ClipIt.Dark" parent="Theme.AppCompat.Light.DarkActionBar">

        <item name="android:statusBarColor">@color/background</item>
        <item name="android:windowBackground">@color/background</item>
        <item name="android:navigationBarColor">@color/navbar</item>

        <item name="actionBarStyle">@style/Widget.ClipIt.ActionBarStyle</item>
        <item name="actionBarTheme">@style/Widget.ClipIt.ActionBarTheme</item>
        <item name="actionBarPopupTheme">@style/Widget.ClipIt.ActionBarTheme.Popup</item>

        <item name="android:textColor">@color/textPrimary</item>
        <item name="android:editTextColor">@color/textPrimary</item>
        <item name="android:textColorHint">@color/textSecondary</item>

        <item name="android:colorControlNormal">@color/itemBackground</item>
        <item name="android:colorControlActivated">@color/accentBlue</item>
        <item name="android:colorEdgeEffect">@color/edgeFiller</item>

    </style>

    <!--~~~~~~~~~~~~~~~~~~~~ ACTION BAR ~~~~~~~~~~~~~~~~~~~~-->

    <style name="Widget.ClipIt.ActionBarStyle" parent="Widget.AppCompat.Light.ActionBar">
        <item name="background">@color/background</item>
        <item name="colorControlNormal">@color/textPrimary</item>
        <item name="android:elevation">0dp</item>
        <item name="elevation">0dp</item>
        <item name="titleTextStyle">@style/Widget.ClipIt.ActionBarStyle.TitleStyle</item>
    </style>

    <style name="Widget.ClipIt.ActionBarStyle.TitleStyle"
           parent="TextAppearance.AppCompat.Widget.ActionBar.Title">

        <item name="android:textColor">@color/textPrimary</item>

    </style>

    <style name="Widget.ClipIt.ActionBarTheme" parent="Base.ThemeOverlay.AppCompat.Dark.ActionBar">
        <item name="colorControlNormal">@color/textPrimary</item>
        <item name="colorControlHighlight">@color/itemRipple</item>
    </style>

    <style name="Widget.ClipIt.ActionBarTheme.Popup" parent="ThemeOverlay.AppCompat.Dark.ActionBar">
        <item name="android:colorBackground">@color/background</item>
        <item name="colorControlHighlight">@color/itemRipple</item>
    </style>

    <!--~~~~~~~~~~~~~~~~~~~~ TEXT STYLES ~~~~~~~~~~~~~~~~~~~~-->

    <style name="ClipCardItemTextStyle" parent="android:Widget.TextView">
        <item name="android:textColor">@color/textSecondary</item>
        <item name="android:textSize">17sp</item>
        <item name="android:fontFamily">sans-serif-light</item>
    </style>

    <style name="ClipCardItemDateTextStyle" parent="android:Widget.TextView">
        <item name="android:textColor">@color/textSecondary</item>
        <item name="android:textSize">12sp</item>
        <item name="android:fontFamily">sans-serif</item>
    </style>

    <style name="TitleTextStyle" parent="android:Widget.TextView">
        <item name="android:textColor">@color/textPrimary</item>
        <item name="android:textSize">21sp</item>
        <item name="android:fontFamily">sans-serif-light</item>
    </style>

    <style name="PrimaryTextStyle">
        <item name="android:textColor">@color/textPrimary</item>
        <item name="android:textSize">18sp</item>
        <item name="android:fontFamily">sans-serif-medium</item>
    </style>

    <style name="SecondaryTextStyle">
        <item name="android:textColor">@color/textSecondary</item>
        <item name="android:textSize">16sp</item>
        <item name="android:fontFamily">sans-serif-lightf</item>
    </style>

    <style name="TertiaryTextStyle" parent="android:Widget.TextView">
        <item name="android:textColor">@color/textTertiary</item>
        <item name="android:textSize">16sp</item>
        <item name="android:fontFamily">sans-serif-light</item>
    </style>

    <style name="SubInfoTextStyle" parent="android:Widget.TextView">
        <item name="android:textColor">@color/textTertiary</item>
        <item name="android:textSize">14sp</item>
        <item name="android:fontFamily">sans-serif</item>
    </style>

    <style name="LabelTextStyle" parent="android:Widget.TextView">
        <item name="android:textColor">@color/accentBlue</item>
        <item name="android:textSize">15sp</item>
        <item name="android:fontFamily">sans-serif-medium</item>
    </style>

    <style name="EditableTextStyle" parent="android:Widget.TextView">
        <item name="android:textColor">@color/textPrimary</item>
        <item name="android:textSize">16sp</item>
        <item name="android:fontFamily">sans-serif</item>
    </style>

    <!--~~~~~~~~~~~~~~~~~~~~ STUFF ~~~~~~~~~~~~~~~~~~~~-->

    <style name="Theme.ClipIt.SplashScreen" parent="Theme.AppCompat.NoActionBar">
        <item name="android:windowBackground">@drawable/splash_screen</item>
    </style>

    <!-- use with android:foreground="?android:attr/selectableItemBackground" -->
    <style name="Theme.ClipIt.Dark.Selectable">
        <item name="colorControlHighlight">@color/itemRipple</item>
    </style>

    <style name="AlertDialogStyle" parent="Base.Theme.AppCompat.Light.Dialog">
        <item name="android:colorBackground">@color/background</item>
        <item name="android:textColor">@color/textPrimary</item>
        <item name="colorPrimaryDark">@color/accentRed</item>
        <item name="android:colorAccent">@color/accentBlue</item>

    </style>

</resources>