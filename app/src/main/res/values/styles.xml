<resources xmlns:android="http://schemas.android.com/apk/res/android">

    <!--~~~~~~~~~~~~~~~~~~~~ APP THEME ~~~~~~~~~~~~~~~~~~~~-->

    <!-- Base application theme -->
    <style name="Theme.ClipIt.Dark" parent="Theme.AppCompat.Light.DarkActionBar">

        <item name="android:statusBarColor">@color/actionBar</item>
        <item name="android:windowBackground">@color/background</item>
        <item name="android:navigationBarColor">@color/navBar</item>

        <item name="actionBarStyle">@style/Widget.ClipIt.ActionBarStyle</item>
        <item name="actionBarTheme">@style/Widget.ClipIt.ActionBarTheme</item>

        <item name="colorControlHighlight">@color/itemRipple</item>
        <item name="android:colorEdgeEffect">@color/opacFiller</item>

    </style>

    <!--~~~~~~~~~~~~~~~~~~~~ ACTION BAR ~~~~~~~~~~~~~~~~~~~~-->

    <style name="Widget.ClipIt.ActionBarStyle" parent="Widget.AppCompat.Light.ActionBar">
        <item name="background">@color/statusBar</item>
        <item name="colorControlNormal">@color/textPrimary</item>
        <item name="titleTextStyle">@style/Widget.ClipIt.ActionBarStyle.TitleTextStyle</item>
    </style>

    <style name="Widget.ClipIt.ActionBarStyle.TitleTextStyle"
           parent="TextAppearance.AppCompat.Widget.ActionBar.Title">

        <item name="android:textColor">@color/textPrimary</item>

    </style>

    <style name="Widget.ClipIt.ActionBarTheme" parent="Base.ThemeOverlay.AppCompat.Dark.ActionBar">
        <item name="colorControlNormal">@color/textPrimary</item>
    </style>

    <!--~~~~~~~~~~~~~~~~~~~~ TEXT STYLES ~~~~~~~~~~~~~~~~~~~~-->

    <style name="PrimaryTextStyle">
        <item name="android:textColor">@color/textPrimary</item>
        <item name="android:textSize">18sp</item>
        <item name="android:fontFamily">sans-serif</item>
    </style>

    <style name="SecondaryTextStyle">
        <item name="android:textColor">@color/textSecondary</item>
        <item name="android:textSize">16sp</item>
        <item name="android:fontFamily">sans-serif-light</item>
    </style>

    <style name="TertiaryTextStyle" parent="android:Widget.TextView">
        <item name="android:textColor">@color/light3</item>
        <item name="android:textSize">16sp</item>
        <item name="android:fontFamily">sans-serif-light</item>
    </style>

    <style name="TitleTextStyle" parent="android:Widget.TextView">
        <item name="android:textColor">@color/textPrimary</item>
        <item name="android:textSize">21sp</item>
        <item name="android:fontFamily">sans-serif-light</item>
    </style>

    <style name="SubInfoTextStyle" parent="android:Widget.TextView">
        <item name="android:textColor">@color/light3</item>
        <item name="android:textSize">12sp</item>
        <item name="android:fontFamily">sans-serif-light</item>
    </style>

    <style name="AccentTextStyle" parent="android:Widget.TextView">
        <item name="android:textColor">@color/accentBlue</item>
        <item name="android:textSize">15sp</item>
        <item name="android:fontFamily">sans-serif-medium</item>
    </style>

    <!--~~~~~~~~~~~~~~~~~~~~ STUFF ~~~~~~~~~~~~~~~~~~~~-->

    <style name="Theme.ClipIt.SplashScreen" parent="Theme.AppCompat.NoActionBar">
        <item name="android:windowBackground">@drawable/splash_screen</item>
    </style>

    <style name="CustomPopupTheme" parent="Theme.AppCompat.NoActionBar">
        <item name="android:background">@color/menuFiller</item>
        <item name="android:overlapAnchor">false</item>
    </style>

    <!-- use with android:foreground="?android:attr/selectableItemBackground" -->
    <style name="SelectableItemTheme">
        <item name="colorControlHighlight">@color/itemRipple</item>
    </style>

</resources>