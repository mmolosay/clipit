<resources xmlns:android="http://schemas.android.com/apk/res/android">

    <!--==================== APP THEME ====================-->

    <!-- Base theme for application -->
    <style name="AppTheme" parent="@style/Theme.AppCompat.NoActionBar">
        <item name="android:colorPrimaryDark">@color/status_bar</item>
        <item name="colorPrimary">@color/content_active</item>
        <item name="android:windowBackground">@color/background</item>
        <item name="android:navigationBarColor">@color/nav_bar</item>
        <item name="android:actionBarStyle">@style/ToolbarStyle</item>

        <item name="android:colorEdgeEffect">@color/accent</item>
    </style>

    <!--==================== FRAGMENTS ====================-->

    <!-- Toolbar -->
    <style name="ToolbarStyle" parent="@style/Widget.AppCompat.ActionBar.Solid">
        <item name="android:background">@color/toolbar</item>
        <item name="colorPrimary">@color/content_active</item>
        <item name="android:fontFamily">sans-serif</item>
        <item name="android:gravity">center_vertical</item>
    </style>

    <!-- Splash screen -->
    <style name="SplashScreenTheme" parent="Theme.AppCompat.NoActionBar">
        <item name="android:windowBackground">@drawable/background_splash</item>
    </style>

    <!--==================== TEXT STYLES ====================-->

    <style name="PrimaryTextStyle">
        <item name="android:textColor">@color/light1</item>
        <item name="android:textSize">18sp</item>
        <item name="android:fontFamily">sans-serif-light</item>
    </style>

    <style name="SecondaryTextStyle">
        <item name="android:textColor">@color/light2</item>
        <item name="android:textSize">16sp</item>
        <item name="android:fontFamily">sans-serif-light</item>
    </style>

    <style name="TertiaryTextStyle" parent="android:Widget.TextView">
        <item name="android:textColor">@color/light3</item>
        <item name="android:textSize">16sp</item>
        <item name="android:fontFamily">sans-serif-light</item>
    </style>

</resources>